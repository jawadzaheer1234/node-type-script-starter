{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": "./api",
    "paths": {
      "~/types": ["./types"],
      "~/models": ["./models"],
      "~/routes": ["./routes"],
      "~/middleware": ["./middleware"],
      "~/controllers": ["./controllers"],
      "~/utils": ["./utils"],
      "~/data": ["./data"],

      "~/express": ["./@types"]
    },
    "outDir": "./build",
    "resolveJsonModule": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules"]
}
